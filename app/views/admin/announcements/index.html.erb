<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>タイトル</th>
      <th>本文</th>
      <th>作成日時</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.id %></td>
        <td><%= announcement.title %></td>
        <td><%= announcement.content %></td>
        <td><%= announcement.created_at %></td>
        <td>
          <%= link_to '削除', admin_announcement_path(announcement), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
