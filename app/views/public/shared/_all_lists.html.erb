<div class="album py-5 bg-light">
  <div class="container">
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% stock_posts.each do |pos| %>
        <div class="col">
          <div class="card shadow-sm">
            <% if customer_signed_in? %>
              <%= link_to post_path(pos.id) do %>
                <%= image_tag pos.get_front_image(600,270), class: 'bd-placeholder-img card-img-top', style: 'width: 100%; height: 225px;' %>
              <% end %>
            <% elsif %>
              <%= image_tag pos.get_front_image(600,270), class: 'bd-placeholder-img card-img-top', style: 'width: 100%; height: 225px;' %>
            <% end %>
          </div>
          <div class="card-body" style="border: 1px solid #DDD;">
            <!--<p class="card-text">-->
              <%#= pos.body %>
            <!--</p>-->
            <%#= pos.customer.name %>
            <h5 class="card-title" style="font-weight: bold; color: black;">
              <% if customer_signed_in? %>
                <%= link_to post_path(pos.id), style: 'color: black;' do %>
                  <%= pos.title.truncate(15) %>
                <% end %>
              <% elsif %>
                <%= pos.title.truncate(15) %>
              <% end %>
            </h5>
            <div class="d-flex justify-content-between align-items-center">
              <% pos.tags.each do |tag| %>
                <p style="margin-right: 5px; font-size: small;">
                  <%= tag.tag_name %>
                </p>
              <% end %>
            </div>
          </div>
          <small>
            <%= pos.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </small>
          <p>
            <small><%= pos.customer.name.truncate(30) %></small>
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>
