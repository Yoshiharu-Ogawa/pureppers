<h1>ここはマイページ</h1>
<div class="container">
  <div class="row">
    <div class="col-md-3 sidebar">
      <h2>User info</h2>
    <p><%= image_tag @customer.get_profile_image(100,100) %></p>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= current_customer.account_name %></th>
        </tr>
        <tr>
          <!--<th>introduction</th>-->
          <!--<th><%#= user.introduction %></th>-->
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to customers_information_edit_path(current_customer), class: 'btn btn-outline-secondary btn-block', method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
    <h2 class="mt-3">New 備蓄！</h2>
    <%= form_with model: @post do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :posted_title, class: 'form-control book_title' %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :posted_body, class: 'form-control book_body' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Stock!', class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
    <div class="col-md-6">
      <div class="container">
        <div class="row">
          <h5>アカウント名</h5>
          <%= current_customer.account_name %>
        </div>
        <div class="row">
          <h5>登録メールアドレス</h5>
          <%= current_customer.email %>
        </div>
        <div class="row">
          <h5>アカウント画像</h5>
          <%= current_customer.account_name %>
        </div>
      </div>
    </div>
    <div class="col-md-3 sidebar"></div>
  </div>
</div>