<div class="container" style="margin-top: 30px;">
  <div class="row">
    <div class="col-md-3 sidebar">
      <h2>User info</h2>
    <p><%= image_tag @customer.get_profile_image(100,100) %></p>
    <table class="table">
      <tbody>
        <tr></tr>
        <tr class="user-info">
          <th>name</th>
          <th><%= current_customer.name %></th>
        </tr>
        <tr class="user-info">
          <th>introduction</th>
          <th><%= current_customer.introduction %></th>
        </tr>
      </tbody>
    </table>
    <div class="row" style="margin-bottom: 20px;">
      <%= link_to customers_information_edit_path(current_customer), class: 'btn btn-outline-secondary btn-block', method: :get do %>
        <i class="fas fa-user-cog"></i>
      <% end %>
    </div>
    <div class="row">
      <%= link_to bookmarks_path, class: 'btn btn-outline-secondary btn-block', method: :get do %>
        <i class="fa-solid fa-book-bookmark"></i>
      <% end %>
    </div>
    <h2 class="mt-3">New 備蓄！</h2>
    <%= form_with model: @post do |f| %>
      <div class="form-group">
        <label for="book_title">Title</label>
        <%= f.text_field :title, class: 'form-control book_title' %>
      </div>
      <div class="form-group">
        <label for="book_opinion">Opinion</label>
        <%= f.text_area :body, class: 'form-control book_body' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Stock!', class: 'btn btn-success' %>
      </div>
    <% end %>
    </div>
    <div class="col-md-6">
      <div class="container">
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <% @posts.each do |posts| %>
            <tr>
              <td></td>
              <td>
                <%= link_to post_path(posts) do %>
                  <%= posts.title %>
                <% end %>
              </td>
              <td>
                <%= posts.body %>
              </td>
            </tr>
          <% end %>
        </thead>
      </div>
    </div>
    <!--<div class="col-md-3 sidebar">-->
    <!--  <h2>投稿一覧</h2>-->
    <!--  <%#= link_to posts_path, class: 'btn btn-outline-secondary btn-block', method: :get do %>-->
    <!--    <i class="fas fa-user-cog"></i>-->
    <!--  <%# end %>-->
    <!--</div>-->
  </div>
</div>