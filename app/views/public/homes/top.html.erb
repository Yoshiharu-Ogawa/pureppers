<div class="row">
  <% Announcement.all.each do |announcement| %>
    <div class="col-md-6">
      <div class="card mb-4">
        <div class="card-body">
          <h2 class="card-title"><%= announcement.title %></h2>
          <p class="card-text"><%= announcement.content %></p>
          <hr>
          <p class="card-text"><small class="text-muted"><%= announcement.created_at.strftime("%Y/%m/%d %H:%M:%S") %></small></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

