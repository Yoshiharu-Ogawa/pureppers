<h1 class="headline" style="border-bottom: 3px solid black; padding-bottom: 5px; margin-bottom: 30px;">
   All Lists
</h1>
<div class="container">
  <table class="table table-hover table-inverse">
    <thead>
      <tr>
        <th>投稿者名</th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @stock_posts.each do |posts| %>
      <tr>
        <td>
          <%= posts.customer.name %>
        </td>
        <td>
          <%= posts.title %>
        </td>
        <td>
          <%= posts.body %>
        </td>
      </tr>
    <% end %>
  </table>
</div>