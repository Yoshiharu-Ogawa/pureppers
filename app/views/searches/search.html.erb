<h2>Results index</h2>

<table class="table table-hover table-inverse">
  <!--検索対象モデルがCustomerの時 -->
  <% if @range == "Customer" %>
    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.name %></td>
        </tr>
      <% end %>
    </tbody>
  <% else %>
    <!--検索対象モデルがCustomerではない時(= 検索対象モデルがPostの時) -->
    <tbody>
      <% @posts.each do |pos| %>
        <tr>
          <td>
            <%= link_to post_path(pos) do %>
              <%= pos.title %>
            <% end %>
          </td>
          <td><%= pos.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>